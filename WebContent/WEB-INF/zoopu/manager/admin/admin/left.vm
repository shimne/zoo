<script type="text/javascript">
var setting =
{
	data:
	{
		simpleData:
		{
			enable: true
		}
	},
	callback: 
	{
		onClick: onClick
	}
};

var zNodes = ${data};

$(document).ready(function()
{
	$.fn.zTree.init($('#departmentTree'), setting, zNodes);
});

function onClick(event, treeId, treeNode, clickFlag)
{
	window.parent.content.location.href = '/zu/admin/list.do?departmentId=' + treeNode.id;
}
